      %h1
        %a{:href => "/"}
          %img{:src => "/img/logo.png", :title => "Happy Nerds", :alt => "Happy Nerds"}
      %ul
        %li
          %a{:href => '/'} Home
        %li
          %a{:href => '/view/windows'} Windows
        %li
          %a{:href => '/view/mac'} Mac
        %li
          %a{:href => '/view/linux'} Linux
        %li
          %a{:href => '/view/browser'} Browser
      .Visual
    %div{:id => "CONTENT"}
      %div{:id => "TEXT"}
        %h2 #{@page.capitalize}
        %img{ :id => "illustration", :src => "/img/schneidersitz.png", :alt => "Schneidersitz"}
        = yield

