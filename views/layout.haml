%html{ :lang => "en" }
  %head
    %title Happy Nerds - Programming Links for Kids
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "Description", :content => "Information and links regarding teaching programming to children."}

    %meta{:name => "Keywords", :content => "children, kid, programming, coding, tutorials, agentsheets, alice, phrogram, robomind, sgp, scratch, simple, squeak, etoys, toontalk, logo, robomind" }
